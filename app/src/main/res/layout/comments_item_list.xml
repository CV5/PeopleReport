<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userPerfil_comments"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/comments_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/userPerfil_comments"
        tools:text="usuario"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/userPerfil_comments" />

    <TextView
        android:id="@+id/comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comments_username"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/userPerfil_comments"
        android:textColor="@color/title_color"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Comments"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/userPerfil_comments" />

    <View
        android:layout_below="@id/comment_body"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/subtitle_color_gray_light"
        android:layout_margin="16dp"/>

</RelativeLayout>
